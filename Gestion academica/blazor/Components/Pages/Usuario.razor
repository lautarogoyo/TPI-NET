@page "/usuarios"
@using DTOs
@using API.Clients
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inject UsuarioApi UsuarioApi
@inject PersonaApi PersonaApi
@rendermode InteractiveServer

<PageTitle>Usuarios</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3>Usuarios</h3>
            <div>
                <button class="btn btn-sm btn-warning me-2" @onclick="() => ListaPersonas()">
                    <i class="bi bi-pencil-square"></i> Crear Usuario
                </button>
            </div>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @successMessage
                    <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                </div>
            }

            @if (loading)
            {
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Nombre de usuario</th>
                                <th>Habilitado</th>
                                <th>Persona</th>
                                <th>Legajo</th>
                                <th>TipoPersona</th>
                                <th style="text-end"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (usuarios is { Count: > 0 })
                            {
                                @foreach (var u in usuarios)
                                {
                                    <tr>
                                        <td>@u.IDUsuario</td>
                                        <td>@u.NombreUsuario</td>
                                        <td> @u.Habilitado</td>
                                        <td>@u.NombreApellidoPersona</td>
                                        <td> @u.Legajo</td>
                                        <td>@(u.TipoPersona == 1 ? "Alumno" : "Profesor")</td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => Habilitar(u)">
                                                <i class="fas fa-edit"></i> Habilitar/deshabilitar
                                            </button>
                                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => OpenEditModal(u)">
                                                <i class="fas fa-edit"></i> Editar
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(u)">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No hay usuario.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<UsuarioModal @ref="modal"
OnUsuarioChanged="LoadUsuarios"
OnSuccess="ShowSuccess"
OnError="ShowError" />

@code {
    private List<UsuarioDTO>? usuarios;
    private bool loading = true;

    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private UsuarioModal? modal;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsuarios();         
    }
    private async Task LoadUsuarios()
    {
        try
        {
            loading = true;
            errorMessage = string.Empty;

            usuarios = (await UsuarioApi.GetAllWithPersonas())?.ToList() ?? new();
            successMessage = string.Empty;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar usuarios: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ListaPersonas()
    {
        Navigation.NavigateTo("/sinusuarios");
    }

    private async Task Habilitar(UsuarioDTO u)
    {
        try
        {
            u.Habilitado = !u.Habilitado;
            await UsuarioApi.UpdateAsync(u);
            await LoadUsuarios();

        }
        catch (Exception ex)
        {
            errorMessage = $"Error al modificar: {ex.Message}";
        }
    }

    private Task OpenEditModal(UsuarioDTO u) => modal?.ShowEditModal(u) ?? Task.CompletedTask;

    private async Task ConfirmDelete(UsuarioDTO u)
    {
        var ok = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Eliminar el usuario\"{u.NombreUsuario}\" (ID {u.IDUsuario})?");
        if (ok)
            await DeleteUsuario(u.IDUsuario);
    }

    private async Task DeleteUsuario(int id)
    {
        try
        {
            await UsuarioApi.DeleteAsync(id);
            successMessage = "Usuario eliminado exitosamente.";
            await LoadUsuarios();
            
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar: {ex.Message}";
        }
    }

    private void ShowSuccess(string msg) => successMessage = msg;
    private void ShowError(string msg) => errorMessage = msg;
}
