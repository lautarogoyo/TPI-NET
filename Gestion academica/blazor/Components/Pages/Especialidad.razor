@page "/especialidades"
@using DTOs
@using API.Clients
@using Microsoft.AspNetCore.Components.Authorization
@inject IJSRuntime JSRuntime
@inject EspecialidadApi EspecialidadApi
@inject NavigationManager Nav
@using Microsoft.AspNetCore.Authorization
@rendermode InteractiveServer

<PageTitle>Especialidades</PageTitle>

<AuthorizeView Roles="Admin">
    <Authorized>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <h3>Especialidades</h3>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <button class="btn btn-primary" @onclick="OpenAddModal">
                            <i class="fas fa-plus"></i> Agregar
                        </button>
                    </div>

                    @if (loading)
                    {
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Id</th>
                                        <th>Descripción</th>
                                        <th style="width:160px"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (especialidades is { Count: > 0 })
                                    {
                                        @foreach (var esp in especialidades)
                                        {
                                            <tr>
                                                <td>@esp.IDEspecialidad</td>
                                                <td>@esp.Descripcion</td>
                                                <td class="text-end">
                                                    <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => OpenEditModal(esp)">
                                                        <i class="fas fa-edit"></i> Editar
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(esp)">
                                                        <i class="fas fa-trash"></i> Eliminar
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center text-muted">No hay especialidades.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <EspecialidadModal @ref="modal"
                           OnEspecialidadChanged="LoadEspecialidades"
                           OnSuccess="ShowSuccess"
                           OnError="ShowError" />
    </Authorized>

    <NotAuthorized>
        
    </NotAuthorized>
</AuthorizeView>

@code {
    // Para redirigir si NO tiene el rol Alumno
    [CascadingParameter] private Task<AuthenticationState>? AuthTask { get; set; }

    private List<EspecialidadDTO>? especialidades;
    private bool loading = true;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private EspecialidadModal modal = null!;

    protected override async Task OnInitializedAsync()
        => await LoadEspecialidades();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || AuthTask is null) return;

        var user = (await AuthTask).User;
        var isAuth = user?.Identity?.IsAuthenticated ?? false;

        if (!user.IsInRole("Admin"))
            Nav.NavigateTo("/denied");
    }

    private async Task LoadEspecialidades()
    {
        try
        {
            loading = true;
            errorMessage = string.Empty;
            especialidades = (await EspecialidadApi.GetAllAsync())?.ToList() ?? new();
            successMessage = string.Empty; // limpio el success al recargar
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar especialidades: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private Task OpenAddModal() => modal.ShowAddModal();

    private Task OpenEditModal(EspecialidadDTO esp) => modal.ShowEditModal(esp);

    private async Task ConfirmDelete(EspecialidadDTO esp)
    {
        var ok = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Está seguro que desea eliminar la especialidad \"{esp.Descripcion}\" (ID {esp.IDEspecialidad})?");
        if (ok)
            await DeleteEspecialidad(esp.IDEspecialidad);
    }

    private async Task DeleteEspecialidad(int id)
    {
        try
        {
            await EspecialidadApi.DeleteAsync(id);
            successMessage = "Especialidad eliminada exitosamente.";
            await LoadEspecialidades();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar: {ex.Message}";
        }
    }

    private void ShowSuccess(string msg) => successMessage = msg;
    private void ShowError(string msg) => errorMessage = msg;
}
