@using DTOs
@using API.Clients
@using System.Text.RegularExpressions
@inject IJSRuntime JSRuntime

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((mode == FormMode.Add) ? "Agregar" : "Editar")</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <div class="modal-body">
                    <EditForm Model="currentEspecialidad" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                        @if (mode == FormMode.Update)
                        {
                            <div class="mb-3">
                                <label class="form-label">Id</label>
                                <input class="form-control" value="@currentEspecialidad.IDEspecialidad" readonly />
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Nombre *</label>
                            <InputText @bind-Value="currentEspecialidad.Descripcion" class="form-control" />
                            @if (validationErrors.TryGetValue("Descripcion", out var err))
                            {
                                <div class="text-danger small">@err</div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="Close">Cancelar</button>
                            <button type="submit" class="btn btn-primary" disabled="@saving">
                                @if (saving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                @(mode == FormMode.Add ? "Agregar" : "Actualizar")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnEspecialidadChanged { get; set; }

    private bool showModal;
    private FormMode mode = FormMode.Add;
    private EspecialidadDTO currentEspecialidad = new();
    private bool saving;
    private string errorMessage = string.Empty;
    private readonly Dictionary<string, string> validationErrors = new();

    public enum FormMode { Add, Update }

    // Estos métodos DEBEN ser públicos para poder llamarlos desde el padre con @ref
    public Task ShowAddModal()
    {
        mode = FormMode.Add;
        currentEspecialidad = new();
        ClearValidationErrors();
        showModal = true;
        StateHasChanged();
        return Task.CompletedTask;
    }

    public Task ShowEditModal(EspecialidadDTO especialidad)
    {
        mode = FormMode.Update;
        currentEspecialidad = new EspecialidadDTO
            {
                IDEspecialidad = especialidad.IDEspecialidad,
                Descripcion = especialidad.Descripcion
            };
        ClearValidationErrors();
        showModal = true;
        StateHasChanged();
        return Task.CompletedTask;
    }

    private async Task HandleValidSubmit()
    {
        if (!ValidateEspecialidad()) return;

        try
        {
            saving = true;
            errorMessage = string.Empty;

            if (mode == FormMode.Add)
                await EspecialidadApi.AddAsync(currentEspecialidad);
            else
                await EspecialidadApi.UpdateAsync(currentEspecialidad);

            if (OnEspecialidadChanged.HasDelegate)
                await OnEspecialidadChanged.InvokeAsync();

            Close();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            saving = false;
        }
    }

    private bool ValidateEspecialidad()
    {
        ClearValidationErrors();
        var ok = true;

        if (string.IsNullOrWhiteSpace(currentEspecialidad.Descripcion))
        {
            validationErrors["Descripcion"] = "La descripción es requerida.";
            ok = false;
        }

        StateHasChanged();
        return ok;
    }

    private void ClearValidationErrors()
    {
        validationErrors.Clear();
        errorMessage = string.Empty;
    }

    private void Close()
    {
        showModal = false;
        ClearValidationErrors();
        StateHasChanged();
    }
}